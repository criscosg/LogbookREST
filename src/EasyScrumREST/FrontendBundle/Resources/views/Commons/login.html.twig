{% extends "FrontendBundle:Layouts:login.html.twig" %}

{% block content %}
    <div id="loginbox">
      <form id="login" class="vertical" action="{{ path('login_check') }}" method="post">
          <h3 class="title">Easy<strong>Scrum</strong></h3>
          <p>{{"Introduce tu usuario y contraseña para acceder" | trans}}.</p>
          <div class="input-group input-sm">
              <span class="input-group-addon"><i class="fa fa-user"></i></span>
              <input class="form-control" type="text" name="_username" id="USERNAME" placeholder="{{"Usuario" | trans}}" />
          </div>
          <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock"></i></span>
              <input class="form-control" type="password" name="_password" id="PASSWORD" placeholder="{{"Contraseña" | trans}}" />
          </div>
          <div class="input-group">
                <input type="checkbox" id="remember_me" name="_remember_me" checked="checked">
                    {{ "Recuerda mi sesión" | trans }}
            </label>
          <div class="form-actions clearfix">
              
              <input type="submit" class="btn btn-block btn-primary btn-default" value="{{"Acceder" | trans}}" />
          </div>
      </form>
    </div>
{% endblock %}