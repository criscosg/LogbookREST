<form class="form-horizontal" id="form-hours-sprint" role="form" action="{{ path('save_hours_sprint',{'id':sprint.id})}}"
      method="post" xmlns="http://www.w3.org/1999/html">
    
    <div class="form-group">
        <label id="label_name" for="sprint_hours_date" class="col-sm-3 control-label log-active is-public"> {{ "Register hours in this date" |trans}}</label>
        <div class="col-sm-4">
            {{ form_widget(form.date, { 'attr': { 'class': 'form-control datepicker-date'} }) }}
            <span class="input-group-addon input-group-addon-click">
                <i class="fa fa-calendar"></i>
            </span>
        </div>
    </div>
    
    <div class="form-group">
        <label id="label_hours" for="sprint_hours_hours" class="col-sm-3 control-label user-active">{{ "Hours" |trans}}</label>
        <div class="col-sm-4">
            {{ form_widget(form.hours, { 'attr': { 'class': 'form-control'} }) }}
        </div>
    </div>
    
    {{ form_rest(form) }}
    <div class="form-actions">
        <button id="register" type="submit" class="btn btn-large btn-primary">
            {{ "Save"|trans }}
        </button>
        <img style="display:none;" src="{{ asset('bundles/frontend/img/spinner.gif') }}">
</form>
<script src="{{ asset('bundles/frontend/js/bootstrap-datepicker.js') }}"></script>
<script>
    $(document).ready(function() {
    	$('.datepicker-date').datepicker({
    	    format: 'dd/mm/yyyy'
    	});

        $('span.input-group-addon-click').click(function(){
           $(this).prev('input').focus();
        });
    });
</script>