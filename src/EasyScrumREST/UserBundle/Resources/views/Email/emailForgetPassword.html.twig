{% extends 'FrontendBundle:Email:email.html.twig' %}
{% block content_mail %}
    <table cellpadding="0" cellspacing="0" border="0"  style="color: #717171; font: normal 11px Helvetica, Arial, sans-serif; margin: 0; padding: 0 20px 0 20px;" width="690">
        <tr>
            <td style="padding: 10px 0 0;" align="left">

                <p style="color:#767676; font-weight: normal; margin: 0 0 10px 0; padding: 0; line-height: 20px; font-size: 12px;font-family: Helvetica, Arial, sans-serif; ">
                    {{ "We recieved a request to reset the password associated to this email account. If you have send the request, please follow these instructions:" |trans }}
                </p>
                <p style="color:#767676; font-weight: normal; margin: 0 0 10px 0; padding: 0; line-height: 20px; font-size: 12px;font-family: Helvetica, Arial, sans-serif; ">
                    {{ "Click on the link to reset your password, the link would be active for the next 24 hours." |trans }}
                </p>

                <p style="color:#767676; font-weight: normal; margin: 0 0 10px 0; padding: 0; line-height: 20px; font-size: 12px;font-family: Helvetica, Arial, sans-serif; ">
                    <a href="{{ url }}">{{ "Reset EasyScrum password" |trans }}
                    </a>
                </p>

                <p style="color:#767676; font-weight: small; margin: 0 0 10px 0; padding: 0; line-height: 20px; font-size: 9px;font-family: Helvetica, Arial, sans-serif; ">
                    {{ "If you didn't request the restoration of your password ignore this e-mail. Don't worry your account is safe." |trans }}
                </p>
                <p style="color:#767676; font-weight: small; margin: 0 0 10px 0; padding: 0; line-height: 20px; font-size: 9px;font-family: Helvetica, Arial, sans-serif; ">
                    {{ "EasyScrum wiil never send you an e-mail for you to give o verifi personal data. If you recieve a suspicius e-mail, please inform us at: criscosg@gmail.com" |trans }}
                </p>
            </td>
        </tr>
    </table>
{% endblock %}