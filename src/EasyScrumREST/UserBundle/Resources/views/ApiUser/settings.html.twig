{% extends "FrontendBundle:Layouts:2column.html.twig" %}

{% block title_section %}
    {{ "Settings" |trans }}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="widget-box">
        <div class="widget-title">
            <span class="icon">
                <i class="fa fa-pencil"></i>
            </span>
                <h5>{{ "Settings" |trans }}</h5>
        </div>
        <div class="widget-content nopadding">
            <form class="form-horizontal" id="form-create-item" role="form"
                  action="{{ path('settings',{'id':user.id}) }}"
                  method="post" xmlns="http://www.w3.org/1999/html">
                
                <div class="form-group">
                    <label id="label_email" for="api_user_email" class="col-sm-3 control-label user-active is-public"><span class="red">*</span> {{ "Company name" |trans}}</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.name, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <label id="label_name" for="api_user_name" class="col-sm-3 control-label user-active is-public"> {{ "Price per hour" |trans}}</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.pricePerHour, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label id="label_lastname" for="api_user_lastname" class="col-sm-3 control-label user-active"> {{ "Hours per day" |trans}}</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.hoursPerDay, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>
                
                {{ form_rest(form) }}
                <div class="form-actions">
                    <button id="register" type="submit" class="btn btn-large btn-primary">
                        {{ "Save"|trans }}
                    </button>
                    <img style="display:none;" src="{{ asset('bundles/frontend/img/spinner.gif') }}">
                    <div class="help-block mt10">
                        <span class="red">*</span> {{"Required fields" | trans }}
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}